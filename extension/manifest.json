{
  "manifest_version": 3,
  "name": "SubTwin",
  "version": "1.2.0",
  "description": "在 YouTube/Bilibili 视频原字幕下方显示翻译字幕",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SubTwin 设置",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.bilibili.com/video/*",
        "https://www.bilibili.com/bangumi/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.mymemory.translated.net/*",
    "https://translate.googleapis.com/*",
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://fanyi-api.baidu.com/*",
    "https://api.deepseek.com/*",
    "https://api.openai.com/*",
    "https://open.bigmodel.cn/*",
    "https://*/*"
  ]
}
